@model EmployeeWorkHourTracker.Models.ViewModel.EmployeePasscodeViewModel
@{
    ViewData["Title"] = "Passcode";
}


<div class="row text-center">
    <div class="col-12">
        <div class="tlp-form">
            <form asp-controller="employees" asp-action="@(ViewData["PostToAction"].ToString())" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="EmployeeID" />
                <div class="form-group">
                    <label asp-for="Passcode" class="control-label"></label>
                    <input asp-for="Passcode" class="form-control mt-2" />
                    <span asp-validation-for="Passcode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary p-2 et-button mt-2">Enter</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
     @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}